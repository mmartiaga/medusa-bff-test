{
  "name": "@gfed-medusa/bff-lib-common",
  "version": "1.0.1",
  "description": "Shared observability utilities for GFED Medusa BFF",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goodfrontend/gfed-medusa-bff.git",
    "directory": "packages/lib-common"
  },
  "keywords": [
    "observability",
    "logging",
    "health-check",
    "error-handling",
    "pino",
    "express"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@gfed-medusa-bff/eslint-config": "workspace:*",
    "@gfed-medusa-bff/prettier-config": "workspace:*",
    "@gfed-medusa-bff/typescript-config": "workspace:*",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^4.0.15",
    "tsup": "^8.5.1",
    "typescript": "5.9.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "express": "^5.0.0"
  }
}
